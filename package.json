{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^7.1.0"
  },
  "scripts": {
    "build:viteapp": "lerna run build --scope=viteapp",
    "start:viteapp": "concurrently 'lerna run start --scope=viteapp' 'yarn watch:viteapp'",
    "watch:viteapp": "lerna watch --scope=viteapp --include-dependencies -- lerna run build --scope=\\$LERNA_PACKAGE_NAME"
  },
  "packageManager": "yarn@3.6.0",
  "dependencies": {
    "concurrently": "^8.2.0"
  }
}
